{{#navigation}}

    <div class="top-nav-title"> {{main_nav.0.title}}</div>
    {{#if main_nav.0.sub_nav}}
    
      <ul class="subnav">
        {{#each main_nav.0.sub_nav}}
          <li><a href="{{link}}">{{title}}</a>
          {{#if sub_nav}}
            <ul class="subnav">
              {{#each sub_nav}}
                <li><a href="{{link}}">{{title}}</a>
                  {{#if sub_nav}}
                    <ul class="subnav">
                      {{#each sub_nav}}
                        <li><a href="{{link}}">{{title}}</a>
                          {{#if sub_nav}}
                            <ul>
                              {{#each sub_nav}}
                                <li><a href="{{link}}">{{title}}</a></li>
                              {{/each}}
                            </ul>
                          {{/if}}
                        </li>
                      {{/each}}
                     </ul>
                  {{/if}}
                </li>
              {{/each}}
            </ul>
          {{/if}}
          </li>
        {{/each}}
      </ul>
    {{/if}}

{{/navigation}}
