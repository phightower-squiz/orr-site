{{#navigation}}
    
	<ul class="mainnav">
    {{#each main_nav}}
        <li>
    		  <a href="{{link}}">{{title}}</a>
        	{{#if sub_nav}}
        		<ul class="subnav"> <!-- level 2 -->
        			{{#each sub_nav}}
        				<li><a href="{{link}}">{{title}}</a>
                  {{#if sub_nav}}
                      <ul class="subnav"> <!-- level 3 -->
                          {{#each sub_nav}}
                            <li><a href="{{link}}">{{title}}</a>
                              {{#if sub_nav}}
                                <ul class="subnav"> <!-- level 4 -->
                                  {{#each sub_nav}}
                                     <li><a href="{{link}}">{{title}}</a>
                                      {{#if sub_nav}}
                                        <ul class="subnav"> <!-- level 5 -->
                                          {{#each sub_nav}}
                                            <li><a href="{{link}}">{{title}}</a></li>
                                          {{/each}}
                                        </ul>
                                      {{/if}}
                                     </li>
                                    {{/each}}
                                  </ul>
                              {{/if}}
                            </li>
                          {{/each}}
                      </ul>
                  {{/if}}
                </li>
        			{{/each}}
        		</ul>
        	{{/if}}

        </li>
    {{/each}}
  </ul>
{{/navigation}}